!!!
%html
%head
  %title LogSteam | Full Steam Ahead!
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
%body
  %header
    .header_inner
      = link_to image_tag( 'logo.svg'), root_path, id: "logo"
      %nav
        - if user_signed_in?
          = link_to "About", about_path
          = link_to "Profile", profile_path
          = link_to "Calendar", calendar_path
          = link_to "New Log", new_note_path
          
          %button= link_to "Log Out", destroy_user_session_path, method: :delete
          - if current_user.admin?
            = link_to "KILL ALL HUMANS", destroy_user_session_path, method: :delete
        - else
          %button= link_to "Log In", new_user_session_path
  %p.notice= notice
  %p.alert= alert

  = yield

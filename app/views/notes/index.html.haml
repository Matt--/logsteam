.wrapper_with_padding
	#notes.clearfix
		%h1 LogPile
		- unless @notes.blank?
			- @notes.each do |note|
				%a{ href: (url_for [note])}
					.note
						%p.title= note.title
						%p.date= time_ago_in_words(note.created_at) + ' ago'
			
		- else 
			%h2 Add a log
			%p It appears you haven't created any logs yet... Create a steamy one below.
			%button= link_to "New Note", new_note_path
.wrapper_with_padding
	%button= link_to "New Log", new_note_path
	%button= link_to "Export All (PDF)", notes_path(format: "pdf")



